@{
    ViewData["Title"] = "Khôi phục tài khoản";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <form asp-action="CheckUser" method="post">
            <div class="form-group">
                <label for="identifier">Email hoặc Số điện thoại</label>
                <input type="text" class="form-control" id="identifier" name="identifier" placeholder="Nhập email hoặc số điện thoại" required />
            </div>
            <button type="submit" class="btn btn-primary">Tìm kiếm</button>
        </form>

        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <div class="alert alert-danger">
                @ViewBag.ErrorMessage
            </div>
        }
    </div>
</div>
